# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================

# Telegram Bot Token (Required)
# Get this from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here
BOT_ID=your_bot_id_here

# Telegram API Credentials (Required for advanced features)
# Get these from https://my.telegram.org/apps
# Required for: channel monitoring, user client operations, advanced media handling
API_ID=your_api_id
API_HASH=your_api_hash
SESSION_STRING=your_session_string_here  # Optional: For advanced features using user account

# Admins Configuration (only one needed to bootstrap the system)
ADMINS=123456789

# =============================================================================
# DATABASE CONFIGURATION (MongoDB Only)
# =============================================================================

# MongoDB Connection URI (contains all connection details)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGO_DB=

# ==============================================================================
# OTHERS
# ==============================================================================

# Channel/Group for logs
LOG_CHANNEL=-1001234567890   # optional
# Fuzzy search thresold
FUZZY_THRESHOLD=68
# Auto indexing default (True/False)
AUTO_INDEXING=True

# ==============================================================================
# EXTERNAL API CONFIGURATION
# ==============================================================================

# TMDb API Key (Required for request feature)
# Get your free API key from https://www.themoviedb.org/settings/api
TMDB_API=your_tmdb_api_key

# Broadcast Configuration
# Rate limit for broadcast messages (messages per second)
# Default: 25 (conservative, Telegram limit is ~30/s)
BROADCAST_RATE_LIMIT=25

# Progress update interval (update admin every N users)
# Default: 100
BROADCAST_PROGRESS_INTERVAL=100

# Test mode for broadcast (only send to test users)
# Options: True, False, 1, 0, yes, no
# Default: False
BROADCAST_TEST_MODE=False

# Test user IDs for broadcast testing (comma-separated, no spaces)
# Only used when BROADCAST_TEST_MODE=True
# Example: BROADCAST_TEST_USERS=123456789,987654321
BROADCAST_TEST_USERS=


# Support link for users
SUPPORT_LINK=https://t.me/your_support_channel

# Bot start message (Introduction to bot features)
START_MESSAGE="Welcome! ðŸŽ¬ Your ultimate destination for Movies and TV Series. Search, request, and explore our vast collection."
