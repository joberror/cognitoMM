# MovieBot Configuration - Bot Session
# Copy this file to .env and fill in your values

# Telegram API credentials (get from https://my.telegram.org)
API_ID=your_api_id
API_HASH=your_api_hash

# Bot Token (get from @BotFather)
BOT_TOKEN=your_bot_token

# MongoDB Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGO_DB=moviebot

# Admin User IDs (comma-separated)
ADMINS=123456789,987654321

# Optional: Log Channel ID for admin notifications
LOG_CHANNEL=-1001234567890

# Search Configuration
FUZZY_THRESHOLD=68
AUTO_INDEXING=True

# Bot Session Setup Instructions:
# 1. Create a bot with @BotFather on Telegram
# 2. Get the bot token and put it in BOT_TOKEN
# 3. Add the bot as admin to channels you want to monitor
# 4. Use /add_channel command to add channels to monitoring
# 5. Bot must be admin in channels for file forwarding to work
